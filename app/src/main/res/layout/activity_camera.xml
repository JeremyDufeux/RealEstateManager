<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.camera.CameraActivity">

    <FrameLayout
        android:id="@+id/activity_camera_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/activity_camera_capture_photo_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:layout_gravity="bottom|center_horizontal"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_shutter"
        android:contentDescription="@string/capture"
        />

    <ImageButton
        android:id="@+id/activity_camera_capture_video_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:layout_gravity="bottom|center_horizontal"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_shutter_video_normal"
        android:contentDescription="@string/record"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/activity_camera_gallery_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_gravity="bottom|start"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_picture"
        android:contentDescription="@string/gallery"
        />

    <ImageButton
        android:id="@+id/activity_camera_photo_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_gravity="bottom|end"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_photo"
        android:contentDescription="@string/photo"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/activity_camera_video_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_gravity="bottom|end"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_video"
        android:contentDescription="@string/video"
        />

    <ImageView
        android:id="@+id/activity_camera_picture_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/capture_picture"
        android:visibility="gone"/>

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/activity_camera_exoplayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/activity_camera_cancel_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="25dp"
        android:layout_gravity="top|start"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_cancel"
        android:contentDescription="@string/cancel"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/activity_camera_check_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_gravity="top|end"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_check"
        android:contentDescription="@string/check"
        android:visibility="gone"
        />

</FrameLayout>