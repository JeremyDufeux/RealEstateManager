<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/fragment_add_property_media_size"
    android:layout_height="@dimen/fragment_add_property_media_size"
    android:layout_margin="2dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/activity_add_property_media_item_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/media"
        tools:srcCompat="@sample/properties" />

    <TextView
        android:id="@+id/activity_add_property_media_item_tv"
        style="@style/detailMediaText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal|bottom"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="@sample/properties.json/names/media_name/value" />
</androidx.cardview.widget.CardView>