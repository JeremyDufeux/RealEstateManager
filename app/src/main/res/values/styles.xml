<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="detailTitle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="detailSubtitle">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="detailIcon">
        <item name="tint">@color/grey</item>
    </style>

    <style name="detailMediaText">
        <item name="android:background">@color/blackTransparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editText">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="pointsOfInterestChip" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/background_color_chip_points_of_interest</item>
    </style>

</resources>
